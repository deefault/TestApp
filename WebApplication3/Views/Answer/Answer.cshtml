@model ICollection<Answer>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    
}
<div id="formDiv" class="container">
    
    
</div>
<nav aria-label="...">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled prev-btn">
            <span class="page-link">Previous</span>
        </li>
        @foreach (var a in Model)
        {
            
            if (Model.First() == a)
            {
                <li class="page-item active num-btn" id="@a.Id" answer-type="@a.AnswerType"> 
                    <span class="page-link">
                        @a.Order
                        <span class="sr-only">(current)</span>
                    </span>
                </li>
            }
            else
            {
                <li class="page-item num-btn" id="@a.Id" answer-type="@a.AnswerType">
                    <a class="page-link">@a.Order</a>

                </li>
            }
        }
        <li class="page-item next-btn">
            <span class="page-link">Next</span>
        </li>
    </ul>
</nav>


@section Scripts
{
    <script type="text/javascript">
        loadAnswer();
        
        $("nav ul").on("click", function (e) {
            var activeId = getActiveAnswerId(); 
            submitAnswer();
            
            if (e.target.parentElement.classList.contains("next-btn")) {
                if (!e.target.parentElement.classList.contains("disabled")) {
                    var tmp = getActiveAnswerId - -1;
                    $(".active").removeClass("active");
                    $("#" + tmp).addClass("active");
                }
            }
            else
            if (e.target.parentElement.classList.contains("prev-btn")) {
                if (!e.target.parentElement.classList.contains("disabled")) {
                    var tmp = getActiveAnswerId - 1;
                    $(".active").removeClass("active");
                    $("#" + tmp).addClass("active");
                }
            }
            else
            if (e.target.parentElement.classList.contains("num-btn")) {
                $(".active").removeClass("active");
                $("#" + e.target.parentElement.id).addClass("active");
            }
            if (getActiveAnswerId() == $("nav ul").children().filter(".num-btn")[0].id)
                $(".prev-btn").addClass("disabled");
            else
                $(".prev-btn").removeClass("disabled");
            if (getActiveAnswerId() == $("nav ul").children().filter(".num-btn")[$("nav ul").children().filter(".num-btn").length - 1].id)
                $(".next-btn").addClass("disabled");
            else
                $(".next-btn").removeClass("disabled");

            loadAnswer();

        });
    </script>
}
