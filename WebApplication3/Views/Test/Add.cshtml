@model WebApplication3.Models.TestViewModels.AddTestViewModel

@{
    ViewBag.Title = "Добавить Тест";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>
<form asp-controller="Test" asp-action="Add" asp-route-returnurl="/User/Tests/" method="post" class="form-inline" role="form">
    <h4>Добавить тест</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="IsEnabled" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="IsEnabled" type="checkbox">Тест Включен?</input>
            <span asp-validation-for="IsEnabled" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Добавить</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}