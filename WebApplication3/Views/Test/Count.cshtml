@model WebApplication3.Models.Test
@{
    Layout = "_Layout";
}
<form asp-controller="Test" asp-action="Count" asp-route-returnurl="/User/Tests/" method="post" class="form" role="form">
    <h4 class="text-center" style="padding-top:1rem">@Model.Name</h4>
    <b>Вопросов при прохождении:</b>
    <div class="form-group">
        <input asp-for="Count" value="@Model.Count" class="form-control" />
        <span asp-validation-for="Count" class="text-danger"></span>
    </div>
    <b>Время на прохождение:</b>
    <div class="form-group">
        <input asp-for="TimeToPassing" value="@Model.TimeToPassing" class="form-control" />
        <span asp-validation-for="TimeToPassing" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>