@using Microsoft.AspNetCore.Http
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity;
@model Test
@using WebApplication3.Models;
@{
    ViewBag.Title = Model.Name;
    Layout = "_Layout";
}
@if (User.Identity.IsAuthenticated)
{

    // If user created test
    if (Model.CreatedBy.Id == ((User) ViewData["user"]).Id)
    {
        <div class="align-content-center">
            <h2>@Model.Name</h2>
            <h4>You created test</h4>
            <h4>Questions</h4>


            @if (Model.Questions == null)
            {
                <p>В тесте еще нет вопросов</p>
            }
            else
            {
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Text</th>
                        <th scope="col">Type</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{ int i = 0; }
                    @foreach (var q in Model.Questions)
                    {

                        <tr>
                            
                            <td>@(i + 1)</td>
                            <td>@q.Title</td>
                            <td>@q.QuestionType</td>
                        </tr>
                        i++;
                    }


                    </tbody>
                </table>
                // TODO: add details and edit page
            }
            
        </div>
    }
    else
    {
        if (((TestResult) ViewData["testResult"]).isCompleted)
        {
            <div class="align-content-center">
                <h2>@Model.Name</h2>
                <h4>You completed</h4>
                // TODO: add details about completed test
            </div>
        }
        else
        {
            <div class="align-content-center">
                <h2>test.Name</h2>
                <h4>You can complete this test</h4>
                // TODO: add action to complete test
            </div>
        }
        
    }
}
