@using Microsoft.AspNetCore.Http
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity;
@model Test
@using WebApplication3.Models;
@using WebApplication3.Models;
@{
    ViewBag.Title = Model.Name;
    Layout = "_Layout";
}
@if (User.Identity.IsAuthenticated)
{

    // If user created test
    if (Model.CreatedBy.Id == ((User) ViewData["user"]).Id)
    {
        <div class="align-content-center">
            <h2>@Model.Name</h2>
            <h4>You created test</h4>
            <h4>Questions</h4>


            @if (Model.Questions == null)
            {
                <p>В тесте еще нет вопросов</p>
            }
            else
            {
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Text</th>
                        <th scope="col">Type</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{ int i = 0; }
                    @foreach (var q in Model.Questions)
                    {

                        <tr>
                            
                            <td>@(i + 1)</td>
                            <td>@q.Title</td>
                            <td>@q.QuestionType</td> //сделать Enum в базе
                        </tr>
                        i++;
                    }


                    </tbody>
                </table>
                // TODO: add details and edit page
            }
            
            <select id="questionType" asp-items="Html.GetEnumSelectList<Question.QuestionTypeEnum>()" onchange="changeUrl()">
            </select> 
            <a id="addLink" asp-controller="Question" asp-action="AddGet" asp-route-testId="@Model.Id" 
               asp-route-type="@((int)Question.QuestionTypeEnum.SingleChoiceQuestion)" method="get">
                <button class="btn btn-default">Добавить вопрос</button>
            </a>
            
        </div>
    }
    else
    {
        if (((TestResult) ViewData["testResult"]).isCompleted)
        {
            <div class="align-content-center">
                <h2>@Model.Name</h2>
                <h4>You completed</h4>
                // TODO: add details about completed test
            </div>
        }
        else
        {
            <div class="align-content-center">
                <h2>test.Name</h2>
                <h4>You can complete this test</h4>
                // TODO: add action to complete test
            </div>
        }
        
    }
}
<script>$("#questionType").val();
    function changeUrl() { 
        var href = $("#addLink").attr("href");
        
        var split = href.split("/");
        // Get selected value
        console.log($("#questionType").val());
        split[split.length-1] = $("#questionType").val();
        href = split.join("/");
        $("#addLink").attr("href", href);
        console.log(href);
    }

</script>
