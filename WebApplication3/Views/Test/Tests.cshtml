@using Microsoft.EntityFrameworkCore
@model System.Collections.Generic.List<WebApplication3.Models.Test>

@{
    ViewBag.Title = "Тесты";
    Layout = "_Layout";
}

<h2>title</h2>
@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        Вы пока еще не создали тестов
    </div>
}
else
{
    <dt>
        @Html.DisplayNameFor(model => model)
    </dt>
    <dd>
        <table class="table">
            <tr>
                <th>#</th>
                <th>Название</th>
                <th>Включен?</th>
                <th>Создан</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                    </td>
                    <td>
                        @if (item.IsEnabled)
                        {
                            <span class="badge badge-success">Да</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Нет</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy.UserName)
                    </td>
                </tr>
            }
        </table>
    </dd>
}
<a asp-controller="Test" asp-action="Add" method="get"><button class="btn btn-info">Добавить тест</button></a>
<button class="btn btn-info"
        data-toggle="collapse" data-target=".multi-collapse"
        aria-expanded="false" aria-controls="addFromFileFormCollapse">
    Добавить тест из файла
</button>
<div class="row">
    <div class="col">
        <div class="collapse multi-collapse" id="addFromFileFormCollapse">
            <div class="card card-body">
                <form asp-controller="Test" enctype="multipart/form-data" asp-action="AddFromFile" asp-route-returnurl="/User/Tests/" method="post" class="form" role="form">
                    <div class="form-group">
                        <div class="form-control-file col-md-10">
                            <details>
                                <summary>Пример</summary>
                                <pre>
test {
	text = Название теста
	flag = Состояние (true/false)
	question {
		type = Тип вопроса (single/multi/text/dnd)
		text = Текст вопроса
		score = Баллов за правильный ответ
		option {
			text = Текст варианта ответа
			flag = Состояние (true/false)*
		}
	}
}
* - Только для single и multi
                </pre>
                            </details>
            
                            <input type="file" name="uploadedFile" />
                        </div>
                    </div>
    
                    <div class="form-group row">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" value="Upload" class="btn btn-primary">Загрузить</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>